{
  "name": "northstar",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --webpack",
    "build": "next build --webpack",
    "start": "next start",
    "lint": "eslint",
    "test": "NODE_ENV=test vitest",
    "test:ui": "NODE_ENV=test vitest --ui",
    "test:run": "NODE_ENV=test vitest run",
    "test:coverage": "vitest run --coverage",
    "supabase:start": "npx supabase start",
    "supabase:stop": "npx supabase stop",
    "db:init": "psql postgresql://postgres:postgres@127.0.0.1:54322/postgres -c 'CREATE DATABASE northstar;' || true",
    "db:migrate:local": "DATABASE_URL=postgresql://postgres:postgres@127.0.0.1:54322/northstar npx drizzle-kit migrate",
    "db:setup": "pnpm db:init && pnpm db:migrate:local",
    "db:seed": "DATABASE_URL=postgresql://postgres:postgres@127.0.0.1:54322/northstar npx tsx drizzle/seed.ts",
    "db:reset": "DATABASE_URL=postgresql://postgres:postgres@127.0.0.1:54322/northstar npx tsx drizzle/db-reset.ts"
  },
  "dependencies": {
    "@base-ui/react": "^1.0.0",
    "@hugeicons/core-free-icons": "^3.1.1",
    "@hugeicons/react": "^1.1.4",
    "@serwist/next": "^9.4.2",
    "@supabase/ssr": "^0.8.0",
    "@supabase/supabase-js": "^2.89.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "drizzle-orm": "^0.45.1",
    "next": "16.1.1",
    "next-intl": "^4.7.0",
    "pg": "^8.16.3",
    "postgres": "^3.4.7",
    "radix-ui": "^1.4.3",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "serwist": "^9.4.2",
    "shadcn": "^3.6.2",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.4.0",
    "tw-animate-css": "^1.4.0"
  },
  "devDependencies": {
    "@electric-sql/pglite": "^0.3.14",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^20",
    "@types/pg": "^8.16.0",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/coverage-v8": "^4.0.16",
    "@vitest/ui": "^4.0.16",
    "dotenv": "^16.6.1",
    "drizzle-kit": "^0.31.8",
    "eslint": "^9",
    "eslint-config-next": "16.1.1",
    "happy-dom": "^20.0.11",
    "tailwindcss": "^4",
    "tsx": "^4",
    "typescript": "^5",
    "vitest": "^4.0.16"
  }
}
